<h1>Blog</h1>

<%= form_with(url: post_create_path, model: @post, local: :true) do |f|%>
  <%= f.label :titulo%>
  <%= f.text_field :title%>

  <%= f.label :Imagen%>
  <%= f.text_field :image%>

  <%= f.label :Contenido%>
  <%= f.text_field :content%>

  <%= f.submit "Crear"%>

<% end%>

<div class="row my-3">
  <% @posts.each do |post| %>
    <div class="col-sm-6">
      <div class="card mb-3">
        <div class="card" style="width: 18rem;">
          <%= image_tag post.image, class: "image_fluid"%>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= post.title%>
          </h5>
          <p class="card-text">
            <%= post.content%>
          </p>
          <p class="card-text"><small class="text-muted">
            <%= post.created_at%>
          </small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
